@{
    ViewData["Title"] = "Контакты";
    Layout = "_Layout";
}
<div class="container mt-5">
    <h2 class="text-center mb-4">Телефонная книга</h2>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in ViewBag.Contacts)
            {
                <tr>
                    <td><a href="@Url.Action("Details", "Home", new { id = contact.ID })">@contact.ID</a></td>
                    <td>@contact.LastName</td>
                    <td>@contact.FirstName</td>
                    <td>@contact.MiddleName</td>
                </tr>
            }
        </tbody>
    </table>
    @* <a class="btn btn-dark" href="@Url.Action("Add", "Home")">Создать контакт</a> *@
</div>
