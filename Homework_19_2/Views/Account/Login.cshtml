@model WebAPIContacts.AuthContactApp.UserLogin

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<h2 class="text-center">Login</h2>

<form asp-action="AccountLogin" asp-controller="Account" method="post" class="card p-4 mx-auto mt-5" style="max-width: 400px;">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="LoginProp" class="form-label"></label>
        <input asp-for="LoginProp" class="form-control" />
        <span asp-validation-for="LoginProp" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="ReturnUrl" />

    <button type="submit" class="btn btn-primary">Login</button>
</form>

<div class="text-center">
    @Html.ActionLink("Register", "Register", "Account", null, new { @class = "link" })
</div>
