 @model WebAPIContacts.AuthContactApp.UserRegistration

@{
    ViewData["Title"] = "Регистрация";
    Layout = "_Layout";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-controller="Account" asp-action="AccountRegister" method="post" class="card p-4 mt-5">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="LoginProp" class="form-label">Логин</label>
                <input asp-for="LoginProp" class="form-control" />
                <span asp-validation-for="LoginProp" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Пароль</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Повторите пароль</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Role" class="form-label">Роль</label>
                <select asp-for="Role" class="form-control">
                    <option value="">Выберите роль</option>
                    <option value="User">Пользователь</option>
                    <option value="Admin">Администратор</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


